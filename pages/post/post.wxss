}

.catebutton.selected{
  color: #ffffff;
  background-color: #55aaff;
  padding: 20rpx 20rpx 20rpx 20rpx;
}

.catebutton.notselected{
  color: #aaaaaa;
  background-color: #ffffff;
  padding: 20rpx 20rpx 20rpx 20rpx;
}

